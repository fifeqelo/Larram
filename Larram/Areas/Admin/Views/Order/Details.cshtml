@model Larram.Models.ViewModels.OrderDetailsViewModel
@using Larram.Utility

<form method="post">
    <input hidden asp-for="Order.Id" />
    <br />
    <div class="backgroundWhite container">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0 row container">
                <div class="col-12 d-none d-md-block col-md-6 pb-1">
                    <i class="fas fa-shopping-cart"></i> &nbsp; Order Summary
                </div>
                <div class="col-12 col-md-4 offset-md-2 text-right">
                    <a asp-area="Admin" asp-controller="Order" asp-action="Index" class="btn btn-outline-info form-control btn-sm">Back to Orders</a>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-primary">PickUp Details:</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Name</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                    {
                                        <input asp-for="@Model.Order.Name" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="@Model.Order.Name" type="text" class="form-control" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Phone</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                    {
                                        <input asp-for="@Model.Order.PhoneNumber" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="@Model.Order.PhoneNumber" type="text" class="form-control" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Address</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                    {
                                        <input asp-for="@Model.Order.StreetAdress" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="@Model.Order.StreetAdress" type="text" class="form-control" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">City</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                    {
                                        <input asp-for="@Model.Order.City" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="@Model.Order.City" type="text" class="form-control" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">State</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                    {
                                        <input asp-for="@Model.Order.State" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="@Model.Order.State" type="text" class="form-control" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Zip Code</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                    {
                                        <input asp-for="@Model.Order.PostalCode" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="@Model.Order.PostalCode" type="text" class="form-control" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Email</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                    {
                                        <input asp-for="@Model.Order.ApplicationUser.Email" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="@Model.Order.ApplicationUser.Email" type="text" class="form-control" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Order Date</div>
                                <div class="col-9">
                                    <input value="@Model.Order.OrderDate.ToShortDateString()" type="text" class="form-control" readonly />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Carrier</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                    {
                                        <input asp-for="@Model.Order.Carrier" id="carrier" type="text" class="form-control" />
                                        <span id="carrierValidation" style="display:none" class="text-danger">To pole jest wymagane</span>
                                    }
                                    else
                                    {
                                        <input asp-for="@Model.Order.Carrier" type="text" class="form-control" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Tracking</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                    {
                                        <input asp-for="@Model.Order.TrackingNumber" id="trackingNumber" type="text" class="form-control" />
                                        <span id="trackingValidation" style="display:none" class="text-danger">To pole jest wymagane</span>
                                    }
                                    else
                                    {
                                        <input asp-for="@Model.Order.TrackingNumber" type="text" class="form-control" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Shipping Date</div>
                                <div class="col-9">
                                    <input value="@Model.Order.ShippingDate.ToShortDateString()" id="shippingDate" type="text" readonly class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-primary">Order Summary</span>
                            </h4>
                            <ul class="list-group mb-3">
                                @foreach (var item in Model.OrderDetails)
                                {
                                    <li class="list-group-item d-flex justify-content-between p-2">
                                        <div class="row container">
                                            <div class="col-8">
                                                <input hidden asp-for="@item.Id" />
                                                <h6 class="my-0">@item.ProductAvailability.Product.Name</h6>
                                                <small class="text-muted">Price : @item.Price.ToString("0.00") PLN</small><br />
                                                <small class="text-muted">Quantity : @item.Quantity</small>
                                            </div>
                                            <div class="col-4">
                                                <p class="text-success">Suma: @((item.Price*item.Quantity).ToString("0.00")) PLN</p>
                                            </div>
                                        </div>
                                    </li>
                                }
                                <li class="list-group-item bg-info">
                                    <div class="row container">
                                        <div class="col-6">
                                            <h5 class="text-white">TOTAL </h5>
                                        </div>
                                        <div class="col-6 text-right">
                                            <h5 class="text-white">@Model.Order.OrderTotal.ToString("0.00") PLN</h5>
                                        </div>
                                    </div>
                                </li>
                            </ul>

                            @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                            {
                                <br />
                                @if (Model.Order.OrderStatus == SD.StatusApproved)
                                {
                                    <a asp-action="StartProcessing" asp-route-id="@Model.Order.Id" class="btn btn-primary form-control">Start Processing</a>
                                }
                                @if (Model.Order.OrderStatus == SD.StatusInProcess)
                                {
                                    <input type="submit" value="Ship Order" onclick="return validateInput()" class="btn btn-primary form-control"
                                           formaction="/Admin/Order/ShipOrder" formmethod="post" />
                                }
                            }
                            else
                            {
                                <label class="btn btn-primary from-control">@Model.Order.OrderStatus</label>
                            }
                            @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee) && Model.Order.OrderStatus != SD.StatusCancelled)
                            {
                                <div class="pt-2">
                                    <a asp-action="CancelOrder" asp-route-id="@Model.Order.Id" class="btn btn-danger form-control">Cancel Order</a>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <script>
        function validateInput() {
            document.getElementById("trackingValidation").style.display = "none";
            document.getElementById("carrierValidation").style.display = "none";
            var trackingNumber = document.getElementById("trackingNumber").value;
            var carrier = document.getElementById("carrier").value;
            if (trackingNumber.toString() == '') {
                document.getElementById("trackingValidation").style.display = "block";
                return false;
            } else {
                if (carrier.toString() == '') {
                    document.getElementById("carrierValidation").style.display = "block";
                    return false;
                } else {
                    return true;
                }
            }
        }
    </script>
}
