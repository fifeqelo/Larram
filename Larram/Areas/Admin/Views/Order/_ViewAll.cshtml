@model PaginatedList<Larram.Models.Order>


        <table class="table table-striped table-responsive-sm table-bordered text-center Roboto" style="font-size:100%;">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">
                        <a class="sortLink" asp-action="Index" asp-route-orderBy="@ViewData["IdSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-status="@ViewData["CurrentStatusSort"]">Id</a>
                    </th>
                    <th scope="col">
                        <a class="sortLink" asp-action="Index" asp-route-orderBy="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-status="@ViewData["CurrentStatusSort"]">Imię</a>
                    </th>
                    <th scope="col">Numer telefonu</th>
                    <th scope="col">Email</th>
                    <th scope="col">Status</th>
                    <th scope="col">
                        <a class="sortLink" asp-action="Index" asp-route-orderBy="@ViewData["TotalPriceSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-status="@ViewData["CurrentStatusSort"]">Wartość (PLN)</a>
                    </th>
                    <th scope="col">Edycja</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                <tr>

                    <td style="width:5%;">@order.Id</td>
                    <td style="width:15%;">@order.ApplicationUser.Name</td>
                    <td style="width:20%;">@order.PhoneNumber</td>
                    <td style="width:30%;">@order.ApplicationUser.Email</td>
                    <td style="width:10%;">@order.OrderStatus</td>
                    <td style="width:15%;">@order.OrderTotal.ToString("0.00")</td>
                    <td style="width:5%;"><a asp-area="Admin" asp-controller="Order" asp-action="Details" asp-route-id="@order.Id" class="text-dark"><i style="font-size:22px" data-feather="edit"></i></a></td>
                </tr>
                }
            </tbody>
        </table>
       