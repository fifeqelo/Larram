@model Larram.Models.Size
@{
    ViewData["Title"] = "Edit";
    Layout = null;
    var title = "NOWY ROZMIAR";

}
@if (Model.Id != 0)
{
    title = "EDYCJA";
}
<div class="container pb-4 Roboto">
    <div class="container d-flex justify-content-end p-0">
        <a class="text-dark text-right mb-1 mt-2" data-dismiss="modal"><i style="font-size:22px" data-feather="x"></i></a>
    </div>
    <form asp-action="Upsert" onsubmit="return jQueryAjaxPost(this);" class="mt-2 p-0">
        <input type="hidden" asp-for="Id" />
        <div class="row text-center">
            <div class="col-12">
                <h1 class="m-0" style="font-size:150%;"><b>@title</b></h1>
                <hr style="width:50%; margin-left:25% !important; margin-right:25% !important;" />
            </div>
            <div class="col-12  pt-3 p-2 d-flex justify-content-center">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
            <div class="col-12 p-2 d-flex justify-content-center">
                <h1 class="m-0 text-left pl-1" style="font-size:80%; width:50%;"><b>Nazwa </b></h1>
            </div>
            <div class="col-12 d-flex justify-content-center">
                <input asp-for="Name" class="form-control" style="width:50%;" />
            </div>
            <div class="col-12  pt-2 p-2 pb-0 d-flex justify-content-center">
                <span style="font-size:80%; width:40%;" asp-validation-for="Name" class="m-0 text-left pl-1 text-danger"></span>
            </div>
            <div class="col-12 pt-1">
                @if (Model.Id != 0)
                {
                    <partial name="_EditAndBackToListButton" model="Model.Id" />
                }
                else
                {
                    <partial name="_CreateAndBackToListButton" />
                }
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}