@model PaginatedList<Larram.Models.Color>


<table class="table table-striped table-bordered text-center Roboto" style="font-size:100%;">
    <thead class="thead-dark">
        <tr>
            <th scope="col">
                <a class="sortLink" asp-action="Index" asp-route-orderBy="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Nazwa</a>
            </th>
            <th scope="col">Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var color in Model)
        {
            <tr>

                <td style="width:70%;">@color.Name</td>
                <td style="width:30%;">
                    <a onclick="showInPopup('@Url.Action("Upsert","Color",new {id=color.Id},Context.Request.Scheme)')" class="text-dark"><i style="font-size:22px" data-feather="edit"></i></a>
                    <a onclick="showInPopup('@Url.Action("Delete","Color",new {id=color.Id},Context.Request.Scheme)')" class="text-dark"><i style="font-size:22px" data-feather="trash-2"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

