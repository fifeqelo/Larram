@model PaginatedList<Larram.Models.Color>


        <table class="table table-striped table-bordered text-center Roboto" style="font-size:100%;">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">
                        <div style="width:100%; display:flex;">
                            <div style="width:53.5%; text-align:end">
                                Nazwa
                            </div>
                            <div style="width:46.5%; text-align:end">
                                <a asp-action="Index" asp-route-orderBy="name_asc" asp-route-currentFilter="@ViewBag.CurrentFilter"><i style="font-size:22px;" class="text-light" data-feather="chevron-up"></i></a>
                                <a asp-action="Index" asp-route-orderBy="name_desc" asp-route-currentFilter="@ViewBag.CurrentFilter"><i style="font-size:22px;" class="text-light" data-feather="chevron-down"></i></a>
                            </div>
                        </div>
                    </th>
                    <th scope="col">Podgląd</th>
                    <th scope="col">Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var color in Model)
                {
                <tr>

                    <td style="width:65%;">@color.Name</td>
                    <td style="width:5%;">
                        <div class="container-fluid justify-content-center align-content-center w-25 h-25 p-2 border" style="background-color:@color.HexValue;"></div>
                    </td>
                    <td style="width:30%;">
                        <a onclick="showInPopup('@Url.Action("Details","Color",new {id=color.Id},Context.Request.Scheme)')" class="text-dark"><i style="font-size:22px" data-feather="eye"></i></a>
                        <a onclick="showInPopup('@Url.Action("Upsert","Color",new {id=color.Id},Context.Request.Scheme)')" class="text-dark"><i style="font-size:22px" data-feather="edit"></i></a>
                        <a onclick="showInPopup('@Url.Action("Delete","Color",new {id=color.Id},Context.Request.Scheme)')" class="text-dark"><i style="font-size:22px" data-feather="trash-2"></i></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
       