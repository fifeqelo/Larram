@model Larram.Models.ViewModels.ProductAvailabilityViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = null;
    var title = "NOWA DOSTĘPNOŚĆ";

}

    <div class="container text-center Roboto" style="width:100%;">
        <div class="container d-flex justify-content-end p-0">
            <a class="text-dark text-right mb-1 mt-2" data-dismiss="modal"><i style="font-size:22px" data-feather="x"></i></a>
        </div>
        @if (Model.ProductAvailability.Id != 0)
        {
            title = "EDYCJA";
        }
        <h1 class="m-2" style="font-size:150%;"><b>@title</b></h1>
        <hr />
        <form asp-action="Upsert" onsubmit="return jQueryAjaxPost(this);" class="mt-2 p-0">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductAvailability.Id" />
                <input type="hidden" asp-for="ProductAvailability.ProductId" value="@ViewBag.ProductId" />
                <div class="container d-flex justify-content-start mt-4">
                    Rozmiar:&nbsp;
                    @Html.DropDownListFor(m => m.ProductAvailability.SizeId, Model.SizeList, "-Wybierz rozmiar",
                    new { @class = "form-control" })
                </div>
                <span asp-validation-for="ProductAvailability.Size" class="text-danger Roboto" style="font-size:80%;"></span>
                <div class="container d-flex justify-content-start mt-4">
                    Ilość:&nbsp;<input asp-for="ProductAvailability.Quantity" class="form-control p-1" type="text" style="width:70%; height:70%; border-radius:0;" />
                </div>
                <span asp-validation-for="ProductAvailability.Quantity" class="text-danger Roboto" style="font-size:80%;"></span>
                <div class="d-flex justify-content-center">
                    @if (Model.ProductAvailability.Id != 0)
                    {
                        <partial name="_EditAndBackToListButton" model="Model.ProductAvailability.Id" />
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton" />
                    }
                </div>
</form>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}