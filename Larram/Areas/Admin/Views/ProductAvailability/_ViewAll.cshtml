@model PaginatedList<Larram.Models.ProductAvailability>

        <table class="table table-striped table-bordered text-center Roboto" style="font-size:100%;">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Rozmiar</th>
                    <th scope="col">Ilość</th>
                    <th scope="col">Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                <tr>

                    <td style="width:20%;">@product.Size.Name</td>
                    <td style="width:20%;">@product.Quantity</td>

                    <td style="width:20%;">
                        <a onclick="showInPopup('@Url.Action("Details","ProductAvailability",new {id=product.Id},Context.Request.Scheme)')" class="text-dark"><i style="font-size:22px" data-feather="eye"></i></a>
                        <a onclick="showInPopup('@Url.Action("Upsert","ProductAvailability",new {id=product.Id, productId=@ViewBag.ProductId},Context.Request.Scheme)')" class="text-dark"><i style="font-size:22px" data-feather="edit"></i></a>
                        <a onclick="showInPopup('@Url.Action("Delete","ProductAvailability",new {id=product.Id},Context.Request.Scheme)')" class="text-dark"><i style="font-size:22px" data-feather="trash-2"></i></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
       