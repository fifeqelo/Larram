@model PaginatedList<Larram.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container p-5">
    <div class="container mb-4 ml-0 p-0">
        <h1 class="Roboto text-center m-0" style="font-size:200%;"><b>ZARZĄDZANIE KATEGORIAMI</b></h1>
        <hr class="m-0" />
        <div class="d-flex justify-content-between p-0">
            <div class="justify-content-start mt-3 Roboto" style="width:20%; font-size:70%; display:inline;">
                <form asp-controller="Category" asp-action="Index" method="get" style="display:inline;">
                    <p>
                        <input class="form-control Roboto" type="text" value="@ViewBag.CurrentFilter" name="search" placeholder="Szukaj..." style="width:70%;" />
                    </p>
                    <a asp-action="Index" class="text-dark" style="font-size:120%;">Wyczyść filtry</a>
                </form>
            </div>
            <a href="#" class="text-light button-managment bg-dark Roboto ml-0 pt-2 pr-0 mr-0 pl-3 justify-content-end" style="width:15%; padding:0.5rem; height:50%; font-size:80%;">
                DODAJ KATEGORIĘ <i style="font-size:18px" class="mb-1" data-feather="plus"></i>
            </a>
        </div>
        <table class="table table-striped table-bordered text-center Roboto" style="font-size:100%;">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">
                        <div style="width:100%; display:flex;">
                            <div style="width:53.5%; text-align:end">
                                Nazwa
                            </div>
                            <div style="width:46.5%; text-align:end">
                                <a asp-action="Index" asp-route-orderBy="name_asc" asp-route-currentFilter="@ViewBag.CurrentFilter"><i style="font-size:22px;" class="text-light" data-feather="chevron-up"></i></a>
                                <a asp-action="Index" asp-route-orderBy="name_desc" asp-route-currentFilter="@ViewBag.CurrentFilter"><i style="font-size:22px;" class="text-light" data-feather="chevron-down"></i></a>
                            </div>
                        </div>
                    </th>
                    <th scope="col">Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>

                        <td style="width:70%;">@category.Name</td>
                        <td style="width:30%;">
                            <a href="#" class="text-dark"><i style="font-size:22px" data-feather="eye"></i></a>
                            <a href="#" class="text-dark"><i style="font-size:22px" data-feather="edit"></i></a>
                            <a asp-action="Delete" asp-route-id="@category.Id" class="text-dark"><i style="font-size:22px" data-feather="trash-2"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @{
            var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
            var nextDisabled = !Model.HasNextPage ? "disabled" : "";
        }
    <div class="d-flex justify-content-center">
        <a asp-action="Index"
           asp-route-orderBy="@ViewBag.CurrentOrderBy"
           asp-route-page="@(Model.PageIndex - 1)"
           asp-route-currentFilter="@ViewBag.CurrentFilter"
           class="btn btn-default p-1 text-light button-managment bg-dark Roboto @prevDisabled" style="width:15%; border-radius:0; font-size:110%;">
            Poprzednia
        </a>
        <a asp-action="Index"
           asp-route-orderBy="@ViewBag.CurrentOrderBy"
           asp-route-page="@(Model.PageIndex + 1)"
           asp-route-currentFilter="@ViewBag.CurrentFilter"
           class="btn btn-default p-1 text-light button-managment bg-dark Roboto @nextDisabled" style="width:15%;  border-radius:0; font-size:110%;">
            Następna
        </a>
    </div>
    </div>
</div>
