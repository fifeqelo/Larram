@model PaginatedList<Larram.Models.Product>


        <table class="table table-striped table-bordered text-center Roboto" style="font-size:100%;">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">
                        <div style="width:100%; display:flex;">
                            <div style="width:53.5%; text-align:end">
                                Nazwa
                            </div>
                            <div style="width:46.5%; text-align:end">
                                <a asp-action="Index" asp-route-orderBy="name_asc" asp-route-currentFilter="@ViewBag.CurrentFilter"><i style="font-size:22px;" class="text-light" data-feather="chevron-up"></i></a>
                                <a asp-action="Index" asp-route-orderBy="name_desc" asp-route-currentFilter="@ViewBag.CurrentFilter"><i style="font-size:22px;" class="text-light" data-feather="chevron-down"></i></a>
                            </div>
                        </div>
                    </th>
                    <th scope="col">Kategoria</th>
                    <th scope="col">Kolor</th>
                    <th scope="col">Płeć</th>
                    <th scope="col">Cena</th>
                    <th scope="col" style="font-size:90%;">Cena promocyjna</th>
                    <th scope="col">Data utworzenia</th>
                    <th scope="col">Akcje</th>
                    <th scope="col">Dostępność</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    var price = "BRAK";
                    if (product.DiscountPrice > 0)
                    {
                        price = product.DiscountPrice.ToString();
                    }
                <tr>

                    <td style="width:20%;">@product.Name</td>
                    <td style="width:10%;">@product.Category.Name</td>
                    <td style="width:5%;">
                        <div class="container-fluid justify-content-center align-content-center w-25 h-25 p-2 border" style="background-color:@product.Color.HexValue;"></div>
                    </td>
                    <td style="width:5%;">@product.Gender</td>
                    <td style="width:10%;">@product.Price</td>
                    <td style="width:10%;">@price</td>
                    <td style="width:20%;">@product.CreatedDate</td>
                    <td style="width:15%;">
                        <a onclick="showInPopup('@Url.Action("Details","Product",new {id=product.Id},Context.Request.Scheme)')" class="text-dark"><i style="font-size:22px" data-feather="eye"></i></a>
                        <a onclick="showInPopup('@Url.Action("Upsert","Product",new {id=product.Id},Context.Request.Scheme)')" class="text-dark"><i style="font-size:22px" data-feather="edit"></i></a>
                        <a onclick="showInPopup('@Url.Action("Delete","Product",new {id=product.Id},Context.Request.Scheme)')" class="text-dark"><i style="font-size:22px" data-feather="trash-2"></i></a>
                    </td>
                    <td style="width:5%;"><a asp-controller="ProductAvailability" asp-route-productName="@product.Name" asp-route-productId="@product.Id" asp-action="Index" class="text-light" style="font-size:70%"><div class="container p-2 bg-dark">EDYCJA <i style="font-size:16px" data-feather="tool"></i></div></a></td>
                </tr>
                }
            </tbody>
        </table>
       