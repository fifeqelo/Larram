@model Larram.Models.Product
@{
    ViewData["Title"] = "Details";
    Layout = null;
}

    <div class="container Roboto mb-5" style="width:100%;">
        <div class="container d-flex justify-content-end p-0">
            <a class="text-dark text-right mb-1 mt-2" data-dismiss="modal"><i style="font-size:22px" data-feather="x"></i></a>
        </div>
        <h1 class="m-3 text-center" style="font-size:150%;"><b>SZCZEGÓŁY</b></h1>
        <hr />
        <div class="row">
            <div class="col-6">
                <div class="row">
                    <div class="col-12 pt-3">
                        <b>Nazwa:</b>&nbsp;@Model.Name
                    </div>
                    <div class="col-12 pt-3">
                        <b>Kategoria:</b>&nbsp;@Model.Category.Name
                    </div>
                    <div class="col-12 pt-3">
                        <b>Kolor:</b>&nbsp;@Model.Color.Name
                    </div>
                    <div class="col-12 pt-3">
                        <b>Opis:</b>&nbsp;@Model.Description
                    </div>
                </div>
            </div>
            <div class="col-6">
                <img src="@Model.ImageUrl" style="width:100%; height:100%;" />
            </div>
        </div>
        </div>
