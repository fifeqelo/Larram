@model Larram.Models.Product
@{
    ViewData["Title"] = "Details";
    Layout = null;
}

    <div class="container text-center Roboto mb-5" style="width:100%;">
        <div class="container d-flex justify-content-end p-0">
            <a class="text-dark text-right mb-1 mt-2" data-dismiss="modal"><i style="font-size:22px" data-feather="x"></i></a>
        </div>
        <h1 class="m-3" style="font-size:150%;"><b>SZCZEGÓŁY</b></h1>
        <hr />
        <div class="container d-flex justify-content-start">
            <b>Id:</b>&nbsp;@Model.Id
        </div>
        <div class="container d-flex justify-content-start">
            <b>Nazwa:</b>&nbsp;@Model.Name
        </div>
        <div class="container d-flex justify-content-start">
            <b>Id Kategorii:</b>&nbsp;@Model.CategoryId
        </div>
        <div class="container d-flex justify-content-start">
            <b>Kategoria:</b>&nbsp;@Model.Category.Name
        </div>
        <div class="container d-flex justify-content-start">
            <b>Opis:</b>&nbsp;@Model.Description
        </div>
        <div class="container d-flex justify-content-start">
            <b>Płeć:</b>&nbsp;@Model.Gender
        </div>
        <div class="container d-flex justify-content-start">
            <b>Data Utworzenia:</b>&nbsp;@Model.CreatedDate
        </div>
    </div>
