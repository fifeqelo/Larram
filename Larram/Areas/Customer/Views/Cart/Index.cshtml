@model Larram.Models.ViewModels.ShoppingCartViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <form method="post">
        <br />
        @if(Model.ListCart.Count() > 0) {
        <div class="backgroundWhiteBorder Roboto">
            <div class="container">
                <div class="card rounded-0">
                    <div class="card-header rounded-0 bg-dark text-light ml-0 row container">
                        <div class="col-6">
                            <i style="font-size:24px" data-feather="shopping-cart"></i> &nbsp;
                            Koszyk
                        </div>
                    </div>
                    <div class="card-body">
                        @foreach (var item in Model.ListCart)
                        {
                            <div class="row">
                                <div class="d-none d-lg-block col-lg-1 text-center py-2">
                                    <img src="@item.ProductAvailability.Product.ImageUrl" width="100%" />
                                </div>
                                <div class="col-12 text-sm-center col-lg-6 text-lg-left pt-2">
                                    <h5><strong>@item.ProductAvailability.Product.Name</strong></h5>
                                    <p><small>Rozmiar: @item.ProductAvailability.Size.Name</small></p>
                                </div>
                                <div class="col-12 col-lg-5 row">
                                    <div class="col-6" style="padding-top:5px;">
                                        <h6><strong>Cena za sztukę:<br /> @item.Price.ToString("0.00") PLN</strong></h6>
                                        <h6><strong>Ilość: @item.Quantity</strong></h6>
                                        <p>@ViewBag.Message</p>
                                        <h6><strong>Suma: @((item.Price*item.Quantity).ToString("0.00")) PLN</strong></h6>
                                    </div>
                                    <div class="col-4 col-sm-4 col-lg-4">
                                        <div class="float-right mx-1">
                                            <a asp-action="Plus" asp-route-id="@item.Id" type="submit" class="btn btn-dark rounded-0">
                                                <i class="fas fa-plus"></i>
                                            </a>
                                        </div>
                                        <div class="float-right mx-1">
                                            <a asp-action="Minus" asp-route-id="@item.Id" type="submit" class="btn btn-dark rounded-0">
                                                <i class="fas fa-minus"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-2 col-sm-4 col-lg-2 text-right">
                                        <a asp-action="Remove" asp-route-id="@item.Id" type="submit" class="btn btn-outline-dark">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <hr />
                        }
                        <div class="row">
                            <div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
                                <ul class="list-group">
                                    <li class="list-group-item rounded-0 d-flex justify-content-between bg-light">
                                        <span class="text-dark"> Suma:</span>
                                        <strong class="text-dark"><span id="txtOrderTotal">@Model.Order.OrderTotal.ToString("0.00") PLN</span></strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="card-footer row">

                            <div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6">

                                <a class="btn btn-dark text-light form-control rounded-0"><b>PRZEJDŹ DO FINALIZACJI ZAMÓWIENIA</b></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        } else
        {
            <p>Koszyk jest pusty</p>
        }
    </form>