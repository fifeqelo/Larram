@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
    <ul class="nav nav-pills flex-column">
        <li class="nav-item"><a class="nav-link @ManageNavPages.IndexNavClass(ViewContext) rounded-0 text-dark" id="index" asp-page="./Index">Profil</a></li>
        <li class="nav-item"><a class="nav-link @ManageNavPages.EmailNavClass(ViewContext) rounded-0 text-dark" id="email" asp-page="./Email">Zmiana adresu Email</a></li>
        <li class="nav-item"><a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext) rounded-0 text-dark" id="change-password" asp-page="./ChangePassword">Zmiana hasła</a></li>
        @if (hasExternalLogins)
        {
            <li id="external-logins" class="nav-item"><a id="external-login" class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext) rounded-0 text-dark" asp-page="./ExternalLogins">Logowania zewnętrzne</a></li>
        }
    </ul>
