@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4 class="Roboto p-2"><b>Zmiana hasła</b></h4>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row Roboto p-2">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <h6>Aktualne hasło</h6>
                <input asp-for="Input.OldPassword" class="form-control w-50" />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6>Nowe hasło</h6>
                <input asp-for="Input.NewPassword" class="form-control w-50" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6>Potwierdź nowe hasło</h6>
                <input asp-for="Input.ConfirmPassword" class="form-control w-50" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-dark p-2 w-25">Zmień hasło</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}