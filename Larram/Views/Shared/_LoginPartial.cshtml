@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-light navBar-panel Roboto"asp-area="Identity" asp-page="/Account/Register"><i style="font-size:32px" data-feather="user-plus"></i><p>Rejestracja</p></a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light navBar-panel Roboto" asp-area="Identity" asp-page="/Account/Login"><i style="font-size:32px" data-feather="log-in"></i><p>Logowanie</p></a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light navBar-panel Roboto" asp-area="Identity" asp-page="/Account/Login"><i style="font-size:32px" data-feather="shopping-bag"></i><p>Koszyk</p></a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light navBar-panel Roboto" asp-area="Identity" asp-page="/Account/Login"><i style="font-size:32px" data-feather="settings"></i><p>Zarządzanie</p></a>
            </li>
        }
    </ul>
